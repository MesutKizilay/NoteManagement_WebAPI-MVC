@model NoteManagement.Models.NoteDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@using (Html.BeginForm("AddNote", "Notes", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Not Başlığını Giriniz")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Not İçeriğini Giriniz")
        @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}
